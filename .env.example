# Environment Variables for Next Hire Job Portal

# Application Environment
NODE_ENV=production

# Port Configuration
BACKEND_PORT=3000
FRONTEND_PORT=80

# Domain Configuration
FRONTEND_URL=https://nexthire.raorajan.pro
BACKEND_URL=https://nexthireapi.raorajan.pro
PRODUCTION_BACKEND_URL=https://nexthireapi.raorajan.pro

# Frontend API URL (used during build time)
VITE_API_URL=https://nexthireapi.raorajan.pro

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/nexthire

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Cloudinary Configuration (for image uploads)
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_SECRET_KEY=your-cloudinary-secret-key

# Email Configuration (for nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# AI API Keys (optional)
OPENAI_API_KEY=your-openai-api-key
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-api-key
